{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Mocha (Test single file)",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "outFiles": ["${workspaceFolder}/test/**/*.js"],
        "runtimeArgs": ["--nolazy"],
        "args": [
          "--inspect-brk", 
          "${relativeFile}",
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
      },
    ]
}